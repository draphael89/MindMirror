{
  "version": 2,
  "rewrites": [
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { 
        "distDir": "frontend/dist"
      }
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/frontend/dist/$1" },
    { "handle": "filesystem" },
    { "src": "/.*", "dest": "/frontend/dist/index.html" }
  ]
}